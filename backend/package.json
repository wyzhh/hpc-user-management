{
  "name": "hpc-user-management-backend",
  "version": "1.0.0",
  "description": "HPC用户管理系统后端API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "NODE_OPTIONS='--dns-result-order=ipv4first' ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "init": "node scripts/init-system.js",
    "check-ldap": "node scripts/check-ldap-config.js",
    "test-ldap": "node scripts/test-ldap-config.js",
    "change-admin-password": "node scripts/change-admin-password.js"
  },
  "keywords": [
    "hpc",
    "ldap",
    "user-management",
    "api"
  ],
  "author": "HPC Management Team",
  "license": "MIT",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/react-router-dom": "^5.3.3",
    "antd": "^5.26.4",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "ldapjs": "^3.0.7",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ldapjs": "^3.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.13",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
